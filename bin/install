#!/usr/bin/env bash
# shellcheck shell=bash

set -Eeuo pipefail

if [[ -z ${ASDF_DOWNLOAD_PATH:-} ]]; then
  # No download path specified, create a temp one
  ASDF_DOWNLOAD_PATH="$(mktemp -d)"
  export ASDF_DOWNLOAD_PATH
  bash "$(dirname "$0")/download"
fi

cp -r "${ASDF_DOWNLOAD_PATH}/mono/mono.pkg/Library/Frameworks/Mono.framework/Versions/${ASDF_INSTALL_VERSION}/"* "${ASDF_INSTALL_PATH}/"
